    </form>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tipForm = document.getElementById("tip-form");

            tipForm.addEventListener("submit", function (event) {
                event.preventDefault();
                const senderNumber = document.getElementById("senderNumber").value;
                const tipAmount = document.getElementById("totalAmount").value; // Fixed variable name

                if (validateForm()) {
                    const requestBody = {
                        businessShortCode: "174379",
                        password: "", // Set dynamically
                        Timestamp: "", // Set dynamically
                        transactionType: "CustomerPayBillOnline",
                        amount: tipAmount,
                        partyA: senderNumber,
                        partyB: "600000",
                        phoneNumber: senderNumber,
                        callBackURL: "https://eolg9b8syvjbt9z.m.pipedream.net",
                        accountReference: "jeffltd",
                        transactionDesc: `Payment of Ksh ${tipAmount}`,
                        accessToken: "Q4ZcXuZHAKmSZlKPTAaPFCpy6hXT",
                        url: "https://sandbox.safaricom.co.ke/mpesa/stkpush/v1/processrequest"
                    };

                    // Calculate timestamp
                    requestBody.Timestamp = new Date().toISOString().replace(/[^0-9]/g, '');

                    // Calculate password
                    const businessShortCode = "174379";
                    const passkey = "bfb279f9aa9bdbcf158e97dd71a467cd2e0c893059b10f78e6b72ada1ed2c919";
                    const concatenatedString = businessShortCode + passkey + requestBody.Timestamp;
                    requestBody.password = btoa(concatenatedString);

                    // Send POST request using fetch API
                    fetch(requestBody.url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(requestBody)
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.ResultCode === "0") {
                                alert("Payment accepted!");
                            } else {
                                alert("Payment rejected. Please check your details and try again.");
                            }
                        })
                        .catch(error => console.error('Error:', error));

                    alert("Prompt sent successfully!");
                }
            });

            const tipButtons = document.querySelectorAll(".tip-btn");
            tipButtons.forEach(function (button) {
                button.addEventListener("click", function () {
                    showForm();
                });
            });

            const numberOptions = document.querySelectorAll(".number-option");
            numberOptions.forEach(function (option) {
                option.addEventListener("click", function () {
                    const selectedNumber = parseInt(this.innerText);
                    const tipAmount = parseInt(this.closest(".tip-card").getAttribute("data-amount"));
                    const totalAmount = selectedNumber * tipAmount;
                    document.getElementById("totalAmount").value = totalAmount;
                    showForm();
                });
            });

            // Set default amount to 1 tip when the page loads
            const defaultTipAmount = parseInt(document.querySelector(".tip-card").getAttribute("data-amount"));
            document.getElementById("totalAmount").value = defaultTipAmount;

            function showForm() {
                document.querySelector(".tip-cards").style.display = "none";
                document.getElementById("tip-form").style.display = "block";
            }

            // Function to validate form inputs
            function validateForm() {
                const senderNumber = document.getElementById("senderNumber").value;
                const tipAmount = document.getElementById("totalAmount").value;

                // Example validation: Check if sender number is a valid Kenyan phone number
                const kenyanPhoneNumberRegex = /^(?:254|\+254|0)?(7\d{8})$/;
                if (!kenyanPhoneNumberRegex.test(senderNumber)) {
                    // Show popover with error message
                    alert("Please enter a valid Kenyan phone number.");
                    return false;
                }

                // Example validation: Check if tip amount is a positive number
                if (isNaN(tipAmount) || parseFloat(tipAmount) <= 0) {
                    // Show popover with error message
                    alert("Please enter a valid positive amount.");
                    return false;
                }

                return true;
            }
        });
